ls /home/ec2-user/delfaro/dist/index.html



sudo truncate -s 0 /var/log/nginx/error.log
sudo tail -n 50 /var/log/nginx/error.log


# Elimina archivos y carpetas no rastreados por git
git clean -fd

# Restaura cualquier archivo modificado a su estado original
git restore .


